extends layout

block content
	h1=title

	ul
		-book_list.sort(function(a, b) {let A = a.title.toUpperCase(); let B = b.title.toUpperCase(); return (A < B) ? -1 : (A > B) ? 1 : 0;});

		each book in book_list
			li
				a(href=book.url) #{book.title}
				|	(#{book.author.name})

		else
			li There are no books.
